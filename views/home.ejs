<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
</head>

<body>

  <div class="click-closed"></div>
  <%- include('./partials/search-form') %>

  <%- include ('./partials/login-form') %> 

  <%- include('./partials/nav') %>

  <!--/ Carousel Star /-->
  <div class="intro intro-carousel">
    <div id="carousel" class="owl-carousel owl-theme">
      <% for (const ap of apartments) { %>
      <div class="carousel-item-a intro-item bg-image" style="background-image: url(<%= ap.mainPhoto %>)">
        <div class="overlay overlay-a"></div>
        <div class="intro-content display-table">
          <div class="table-cell">
            <div class="container">
              <div class="row">
                <div class="col-lg-8">
                  <div class="intro-body">
                    <p class="intro-title-top">Disponible 
                    <h1 class="intro-title mb-4">
                      <span class="color-b"> <%= ap.title %></span>
                      <br> <%= ap.city %></h1>
                    <p class="intro-subtitle intro-price">
                      <a href="/apartment/<%= ap._id %>"><span class="price-a">noche por | <%= ap.price %>€</span></a>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <!--/ Carousel end /-->

 

  <!--/ Property Star /-->
  <section class="section-property section-t8">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="title-wrap d-flex justify-content-between">
            <div class="title-box">
              <h2 class="title-a">Propiedades</h2>
            </div>
            <div class="title-link">
              <a href="/apartment">Todas las propiedades
                <span class="ion-ios-arrow-forward"></span>
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <div id="property-carousel" class="owl-carousel owl-theme">
        <!--/ Empieza el item 1/-->
        <% for (const ap of apartments) { %>
          <div class="carousel-item-b">
            <div class="card-box-a card-shadow">
              <div class="img-box-a">
                <img src="<%= ap.mainPhoto %>" alt="" class="img-a img-fluid">
              </div>
              <div class="card-overlay">
                <div class="card-overlay-a-content">
                  <div class="card-header-a">
                    <h2 class="card-title-a">
                      <a href="/apartment/<%= ap._id %>"> <%= ap.title %>
                        <br /> <%= ap.city %></a>
                    </h2>
                  </div>
                  <div class="card-body-a">
                    <div class="price-box d-flex">
                      <span class="price-a">noche por | <%= ap.price %>€</span>
                    </div>
                    <a href="/apartment/<%= ap._id %>" class="link-a">Click aquí para ver 
                      <span class="ion-ios-arrow-forward"></span>
                    </a>
                  </div>
                  <div class="card-footer-a">
                    <ul class="card-info d-flex justify-content-around">
                      <li>
                        <h4 class="card-info-title">Huéspedes</h4>
                          <span><%= ap.maxGuest %>
                          </span>
                      </li>
                      <li>
                        <h4 class="card-info-title">Habitaciones</h4>
                        <span><%= ap.rooms %>
                        </span>
                      </li>
                      <li>
                        <h4 class="card-info-title">Camas</h4>
                        <span><%= ap.beds %>
                        </span>
                      </li>
                      <li>
                        <h4 class="card-info-title">Baños</h4>
                        <span><%= ap.bathrooms %>
                        </span>
                      </li>  
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>
    </div>
  </section>
  <!--/ Property End /-->


  <%- include ('./partials/footer') %>

  <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
  <div id="preloader"></div>

  <%- include('./partials/scripts') %>

</body>
</html>
