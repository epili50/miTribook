      <section class="property-single nav-arrow-b">
        <div class="container">
          <div class="row">
            <div class="col-sm-12">
              <div id="property-single-carousel" class="owl-carousel owl-arrow gallery-property">

                <% selectedApartment.photos.forEach(function (photoObj) { %> <!-- Accede al objeto completo -->
                  <% if (photoObj.photo) { %> <!-- Verifica si el campo 'photo' existe -->
                    <div class="carousel-item-b">
                      <img src="<%= photoObj.photo %>"
                        alt="<%= photoObj.descriptionPhoto || 'Imagen de la propiedad' %>">
                      <!-- Accede al campo 'photo' -->

                      <% if (photoObj.descriptionPhoto) { %>
                        <div class="card-overlay-a-content description-photo">
                          <%= photoObj.descriptionPhoto %> <!-- Accede al campo 'photo' -->
                        </div>
                        <% } %>

                    </div>
                    <% } %> <!-- Si 'photo' no existe, no renderizará el img -->
                      <% }) %>

              </div>
              <div class="row justify-content-between">
                <div class="col-md-5 col-lg-4">
                  <div class="property-price d-flex justify-content-center foo">
                    <div class="card-header-c d-flex">
                      <div class="card-box-ico">
                        <span class="ion-money">$</span>
                      </div>
                      <div class="card-title-c align-self-center">
                        <h5 class="title-c">
                          <%= selectedApartment.price %>
                        </h5>
                      </div>
                    </div>
                  </div>
                  <div class="property-summary">
                    <div class="row">
                      <div class="col-sm-12">
                        <div class="title-box-d section-t4">
                          <h3 class="title-d">Resumen</h3>
                        </div>
                      </div>
                    </div>
                    <div class="summary-list">
                      <ul class="list">

                        <li class="d-flex justify-content-between">
                          <strong>Ciudad:</strong>
                          <span>
                            <%= selectedApartment.city %>
                          </span>
                        </li>
                        <li class="d-flex justify-content-between">
                          <strong>Habitaciones</strong>
                          <span>
                            <%= selectedApartment.rooms %>
                          </span>
                        </li>
                        <li class="d-flex justify-content-between">
                          <strong>Camas</strong>
                          <span>
                            <%= selectedApartment.beds %>
                          </span>
                        </li>
                        <li class="d-flex justify-content-between">
                          <strong>Baños</strong>
                          <span>
                            <%= selectedApartment.bathrooms %>
                          </span>
                        </li>
                        <li class="d-flex justify-content-between">
                          <strong>Superficie:</strong>
                          <span>
                            <%= selectedApartment.size %>
                              <sup>2</sup>
                          </span>
                        </li>
                        <li class="d-flex justify-content-between">
                          <strong>N° máximo de huéspedes;</strong>
                          <span>
                            <%= selectedApartment.maxGuest %>
                          </span>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                <div class="col-md-7 col-lg-7 section-md-t3">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="title-box-d">
                        <h3 class="title-d">Descripción</h3>
                      </div>
                    </div>
                  </div>
                  <div class="property-description">
                    <p class="description color-text-a">
                      <%= selectedApartment.description %>
                    </p>

                  </div>
                  <div class="row section-t3">
                    <div class="col-sm-12">
                      <div class="title-box-d">
                        <h3 class="title-d">Amenities</h3>
                      </div>
                    </div>
                  </div>
                  <div class="amenities-list color-text-a">
                    <ul class="list-a no-margin">
                      <% selectedApartment.services.forEach(function(service) { %>
                        <li>
                          <%= service %>
                        </li>
                        <% }) %>
                    </ul>
                  </div>
                  <div class="row section-t3">
                    <div class="col-sm-12">
                      <div class="title-box-d">
                        <h3 class="title-d">Reglas</h3> <span class="color-text-a">en este apartamento no está
                          permitido:</span>
                      </div>
                    </div>
                  </div>
                  <div class="amenities-list color-text-a">
                    <ul class="list-a no-margin">
                      <% selectedApartment.rules.forEach(function(rule) { %>
                        <li>
                          <%= rule %>
                        </li>
                        <% }) %>
                    </ul>
                  </div>
                </div>

              </div>

